<main class="contenedor contenedor-formularios">
    <h1><%- page %></h1>

    <form action="/create-account" method="POST" class="default-form">
        <div class="campo">
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Your Email">
        </div>
        <div class="campo">
            <label for="userName">Name</label>
            <input type="text" name="userName" placeholder="Your Name">
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Your Password">
        </div>
        <div class="campo">
            <label for="password">Repeat Your Password</label>
            <input type="password" name="repeat" placeholder="Repeat Your Password">
        </div>
        <div class="campo">
            <input type="submit" value="Create Account" class="btn btn-rosa">
        </div>
    </form>
</main>