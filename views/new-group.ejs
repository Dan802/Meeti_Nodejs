<main class="contenedor contenedor-formularios no-padding">
    <h1><%= page %></h1>

    <form action="" class="default-form" method="POST">
        <div class="campo">
            <label for="name">Name</label>
            <input type="text" name="name" id="" placeholder="Group's Name">
        </div>

        <div class="campo descripcion">
            <label for="description">Description</label>
            <div class="contenedor-editor">
                <input id="x" type="hidden" name="description">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="">Category</label>
            <select name="categoryId" id="">
                <option value="" selected disabled>Select a category</option>
                <% categories.forEach(category => { %>

                    <option value="<%= category.id %>"><%= category.name %></option>

                <% }) %>
            </select>
        </div>
        <div class="campo">
            <label for="image">Image</label>
            <input type="file" name="image" id="">
        </div>
        <div class="campo">
            <label for="url">Web Site</label>
            <input type="url" name="url" id="" placeholder="URL Web Site (https://example.com)">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Create Group" class="btn btn-rosa">
        </div>
    </form>
</main>